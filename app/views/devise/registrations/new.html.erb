
<div class="container device"> 
  <div class="device_frame">
    <p>新しいアカウントを作成</P>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

      <table>
        <tr>
          <th><%= f.label :required, "必須", class: "required" %></th>
          <td><%= f.text_field :username, autofocus: true, autocomplete: "username", :placeholder => "ユーザー名", class: "input" %></td>
        </tr>
        <tr>
          <th><%= f.label :required, "必須", class: "required" %></th>
          <td>><%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "メールアドレス", class: "input" %></td>
        </tr>
        <tr>
          <% if @minimum_password_length %>
          <% end %>
          <th><%= f.label :required, "必須", class: "required" %></th>
          <td><%= f.password_field :password, autocomplete: "new-password", :placeholder => "パスワード", class: "input" %></td>
        </tr>
        <tr>
          <th><%= f.label :required, "必須", class: "required" %></th>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder => "パスワード確認", class: "input" %>
        </tr>
      </table>

      <div class="actions">
        <ul>
          <li><%= f.submit "新しいアカウントを作成", class: "button is-info" %></li>
          <li><%= link_to "既にアカウントをお持ちの方はログイン", "/users/sign_in" %></li>
        </ul>
      </div>

    <% end %>
  
  </div>
</div>