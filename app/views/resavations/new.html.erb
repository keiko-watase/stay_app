<h1 class="title">
    予約内容確認画面
  </h1>
      

  
  
  <section class="section">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-6">
          <%= form_with model: @resavation do |f| %>
          <%= f.hidden_field :room_id, value: @room.id %>
          <%= f.hidden_field :resavation_id, value: @resavation.id %> 
          <div class="col-md-6">
            <table class="reservation-table">
               <tbody>
                  <tr>
                    <td><%= f.label :start_at, "開始日" %></td>
                    <td><%= f.date_field  :start_at, :readonly => true, class: 'form-control mb-4'  %></td>
                  </tr>
                  <tr>
                    <td><%= f.label :end_at, "終了日" %></td>
                    <td><%= f.date_field  :end_at, :readonly => true, class: 'form-control mb-4'  %></td>
                  </tr>
                  <tr>
                    <td><%= f.label :people_number, "人数" %></td>
                    <td><%= f.number_field  :people_number, :readonly => true, class: 'form-control mb-4'  %></td>
                  </tr>
                
                  
                  <td>
                    <%= f.submit "この日程で予約する", class:  "button is-success"  %> 
                  </td>
               </tbody>
            </table>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </section>